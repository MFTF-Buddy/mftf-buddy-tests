{
    "name": "mftf-buddy/tests",
    "description": "MFTF Buddy Tests",
    "type": "magento2-module",
    "license": "AGPL-3.0",
    "keywords": [
        "mftf",
        "buddy",
        "magento",
        "automation",
        "functional",
        "testing"
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">7.3",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "composer/composer": "^1.9||^2.0",
        "mustache/mustache": "~2.5",
        "symfony/dotenv": "^5.3",
        "twig/twig": "^3.4"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.3.1",
        "codacy/coverage": "^1.4",
        "php-coveralls/php-coveralls": "^1.0||^2.2",
        "phpmd/phpmd": "^2.8.0",
        "phpunit/phpunit": "^9.0",
        "sebastian/phpcpd": "~6.0.0",
        "squizlabs/php_codesniffer": "~3.6.0"
    },
    "autoload": {
        "files": [
            "src/_bootstrap.php",
            "src/registration.php"
        ],
        "psr-4": {
            "MFTFBuddy\\Tests\\": "src"
        }
    }
}
