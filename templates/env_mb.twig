#*** Set secret key for MFTF Buddy ***#
MB_SECRET_KEY={{ env.MB_SECRET_KEY }}

#*** Set the base URL for MFTF Buddy api ***#
MB_API_BASE_URL=https://api.mftf-buddy.com/

#*** Set the MFTF Buddy api timeout ***#
MB_API_TIMEOUT=30

#*** Number of parallel groups of MFTF Buddy tests ***#
MB_GROUPS=1

#*** Browsers for running tests on MFTF Buddy (work in progress) ***#
# MB_BROWSERS=chrome,firefox

#*** Set the base URL for your Magento instance ***#
MB_MAGENTO_BASE_URL={{ config.MAGENTO_BASE_URL }}

#*** Uncomment if you are running Admin Panel on separate domain (used with MB_MAGENTO_BACKEND_NAME) ***#
{% if false == config.MAGENTO_BACKEND_BASE_URL %}# MB_MAGENTO_BACKEND_BASE_URL=http://admin.example.com/{% else %}MB_MAGENTO_BACKEND_BASE_URL={{ config.MAGENTO_BACKEND_BASE_URL }}{% endif %}


#*** Set the Admin Username and Password for your Magento instance ***#
{% if false == config.MAGENTO_BACKEND_NAME %}MB_MAGENTO_BACKEND_NAME=admin{% else %}MB_MAGENTO_BACKEND_NAME={{ config.MAGENTO_BACKEND_NAME }}{% endif %}

{% if false == config.MAGENTO_ADMIN_USERNAME %}MB_MAGENTO_ADMIN_USERNAME=admin{% else %}MB_MAGENTO_ADMIN_USERNAME={{ config.MAGENTO_ADMIN_USERNAME }}{% endif %}

{% if false == config.MAGENTO_ADMIN_PASSWORD %}# MB_MAGENTO_ADMIN_PASSWORD={% else %}MB_MAGENTO_ADMIN_PASSWORD={{ config.MAGENTO_ADMIN_PASSWORD }}{% endif %}


#*** Path to CLI entry point and command parameter name. Uncomment and change if folder structure differs from standard Magento installation
{% if false == config.MAGENTO_CLI_COMMAND_PATH %}# MB_MAGENTO_CLI_COMMAND_PATH=mftf/dev/utils/command_sandbox.php{% else %}MB_MAGENTO_CLI_COMMAND_PATH={{ config.MAGENTO_CLI_COMMAND_PATH }}{% endif %}

{% if false == config.MAGENTO_CLI_COMMAND_PARAMETER %}# MB_MAGENTO_CLI_COMMAND_PARAMETER=command{% else %}MB_MAGENTO_CLI_COMMAND_PARAMETER={{ config.MAGENTO_CLI_COMMAND_PARAMETER }}{% endif %}


#*** Uncomment and set host & port if your dev environment needs different value other than MAGENTO_BASE_URL for Rest API Requests ***#
{% if false == config.MAGENTO_RESTAPI_SERVER_PROTOCOL %}# MB_MAGENTO_RESTAPI_SERVER_PROTOCOL=https{% else %}MB_MAGENTO_RESTAPI_SERVER_PROTOCOL={{ config.MAGENTO_RESTAPI_SERVER_PROTOCOL }}{% endif %}

{% if false == config.MAGENTO_RESTAPI_SERVER_HOST %}# MB_MAGENTO_RESTAPI_SERVER_HOST=restapi.magento.com{% else %}MB_MAGENTO_RESTAPI_SERVER_HOST={{ config.MAGENTO_RESTAPI_SERVER_HOST }}{% endif %}

{% if false == config.MAGENTO_RESTAPI_SERVER_PORT %}# MB_MAGENTO_RESTAPI_SERVER_PORT=8080{% else %}MB_MAGENTO_RESTAPI_SERVER_PORT={{ config.MAGENTO_RESTAPI_SERVER_PORT }}{% endif %}


#*** Uncomment this property to change the default timezone MFTF will use for the generateDate action ***#
{% if false == config.DEFAULT_TIMEZONE %}# MB_DEFAULT_TIMEZONE=America/Los_Angeles{% else %}MB_DEFAULT_TIMEZONE={{ config.DEFAULT_TIMEZONE }}{% endif %}


#*** These properties impact the modules loaded into MFTF, you can point to your own full path, or a custom set of modules located with the core set ***#
{% if false == config.MODULE_ALLOWLIST %}MB_MODULE_ALLOWLIST=Magento_Framework,ConfigurableProductWishlist,ConfigurableProductCatalogSearch{% else %}MB_MODULE_ALLOWLIST={{ config.MODULE_ALLOWLIST }}{% endif %}

{% if false == config.MODULE_BLOCKLIST %}# MB_MODULE_BLOCKLIST={% else %}MB_MODULE_BLOCKLIST={{ config.MODULE_BLOCKLIST }}{% endif %}

{% if false == config.MODULE_BLOCK_MAGENTO %}# MB_MODULE_BLOCK_MAGENTO=1{% else %}MB_MODULE_BLOCK_MAGENTO={{ config.MODULE_BLOCK_MAGENTO }}{% endif %}

{% if false == config.CUSTOM_MODULE_PATHS %}# MB_CUSTOM_MODULE_PATHS={% else %}MB_CUSTOM_MODULE_PATHS={{ config.CUSTOM_MODULE_PATHS }}{% endif %}


#*** Bool property which allows the user to toggle debug output during test execution
{% if false == config.MFTF_DEBUG %}# MB_MFTF_DEBUG={% else %}MB_MFTF_DEBUG={{ config.MFTF_DEBUG }}{% endif %}


#*** Default timeout for wait actions
{% if false == config.WAIT_TIMEOUT %}# MB_WAIT_TIMEOUT=30{% else %}MB_WAIT_TIMEOUT={{ config.WAIT_TIMEOUT }}{% endif %}


#*** Uncomment and set to enable all tests, regardless of passing status, to have all their Allure artifacts.
{% if false == config.VERBOSE_ARTIFACTS %}# MB_VERBOSE_ARTIFACTS=true{% else %}MB_VERBOSE_ARTIFACTS={{ config.VERBOSE_ARTIFACTS }}{% endif %}


#*** Uncomment and set to enable browser log entries on actions in Allure. Blocklist is used to filter logs of a specific "source"
{% if false == config.ENABLE_BROWSER_LOG %}# MB_ENABLE_BROWSER_LOG=true{% else %}MB_ENABLE_BROWSER_LOG={{ config.ENABLE_BROWSER_LOG }}{% endif %}

{% if false == config.BROWSER_LOG_BLOCKLIST %}MB_BROWSER_LOG_BLOCKLIST=other{% else %}MB_BROWSER_LOG_BLOCKLIST={{ config.BROWSER_LOG_BLOCKLIST }}{% endif %}


#*** Uncomment and set to true to use Codeception's interactive pause functionality
{% if false == config.ENABLE_PAUSE %}# MB_ENABLE_PAUSE=true{% else %}MB_ENABLE_PAUSE={{ config.ENABLE_PAUSE }}{% endif %}


#*** Elastic Search version used for test ***#
{% if false == config.ELASTICSEARCH_VERSION %}MB_ELASTICSEARCH_VERSION=7{% else %}MB_ELASTICSEARCH_VERSION={{ config.ELASTICSEARCH_VERSION }}{% endif %}


#*** Lifetime (in seconds) of Magento Admin WebAPI Token; if token is older than this value a refresh attempt will be made just before the next WebAPI call ***#
{% if false == config.MAGENTO_ADMIN_WEBAPI_TOKEN_LIFETIME %}# MB_MAGENTO_ADMIN_WEBAPI_TOKEN_LIFETIME=10800{% else %}MB_MAGENTO_ADMIN_WEBAPI_TOKEN_LIFETIME={{ config.MAGENTO_ADMIN_WEBAPI_TOKEN_LIFETIME }}{% endif %}


{% for var_name, var_value in additional_vars %}
{{ var_name }}={{ var_value }}
{% endfor %}

{% if additional_vars %}
MB_ADDITIONAL_VARS={{ additional_vars|keys|join(',') }}
{% endif %}

#*** End of .env ***#
